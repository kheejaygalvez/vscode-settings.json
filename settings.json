{
    // caret
    "editor.cursorStyle": "block", // or "block" for full block caret
    "editor.cursorWidth": 8, // makes it thick
    "editor.cursorBlinking": "blink", // no blinking (optional)
    "editor.cursorSmoothCaretAnimation": "on", // smooth animation

    // layout
    "workbench.sideBar.location": "right",
    "editor.minimap.enabled": false,
    "workbench.colorTheme": "React Theme",
    "workbench.editor.enablePreview": false,
    "editor.stickyScroll.enabled": false,
    "breadcrumbs.enabled": false,
    "workbench.editor.editorActionsLocation": "hidden",
    "window.titleBarStyle": "custom",
    "editor.scrollbar.verticalScrollbarSize": 1,
    "editor.scrollbar.horizontalScrollbarSize": 1,
    "workbench.editor.showTabs": "multiple",

    // typography
    "editor.fontSize": 14,
    "editor.fontFamily": "Geist Mono",
    "editor.lineHeight": 1.4,
    "terminal.integrated.lineHeight": 1.2,
    "terminal.integrated.fontSize": 15,
    "editor.codeLensFontFamily": "Geist Mono",
    "editor.inlayHints.fontFamily": "Geist Mono",
    "editor.inlineSuggest.fontFamily": "Geist Mono",
    "debug.console.fontFamily": "Geist Mono",
    "scm.inputFontFamily": "Geist Mono",
    "terminal.integrated.fontFamily": "Geist Mono",
    "notebook.markup.fontFamily": "Geist Mono",
    "notebook.output.fontFamily": "Geist Mono",
    "chat.editor.fontFamily": "Geist Mono",

    // custom styles
    "workbench.colorCustomizations": {
        "editorGroupHeader.border": "#00000000",
        "editorCursor.foreground": "#FFD700"
    },

    // formatter
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "prettier.tabWidth": 4,

    // React snippets
    "reactSnippets.settings.importReactOnTop": false,

    "git.decorations.enabled": false,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "explorer.confirmDragAndDrop": false,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "git.confirmSync": false,
    "explorer.confirmPasteNative": false,
    "explorer.confirmDelete": false,
    "svelte.enable-ts-plugin": true,
    "github.copilot.nextEditSuggestions.enabled": true,
    "workbench.statusBar.visible": false,
    "github.copilot.enable": {
        "*": false
    },
    "terminal.integrated.commandsToSkipShell": ["language-julia.interrupt"],
    "julia.symbolCacheDownload": true,
    "window.menuBarVisibility": "compact",
    "window.commandCenter": true,
    "workbench.layoutControl.enabled": false,
    "chat.commandCenter.enabled": false

    // terminal
    // "terminal.integrated.defaultProfile.windows": "Command Prompt"
}
